<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
    tools:context=".BranchActivity">

    <LinearLayout style="@style/GreenTitleBar" >

        <TextView
                android:id="@+id/titleTextView"
                android:text="@string/branch_title"
                style="@style/GreenTitleBarText" />

        <Button
                android:id="@+id/nearestStore"
                style="@style/headerBarButton"
                android:text="@string/branch_nearest_store_button" />

    </LinearLayout>

    <include layout="@layout/layout_progress"
             android:id="@+id/progressView"
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="8"
             android:visibility="visible"/>
    <TextView android:id="@+id/searchList"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
    <ListView android:id="@+id/cityList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
